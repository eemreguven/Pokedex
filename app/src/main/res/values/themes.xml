<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pokedex" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Pokedex" parent="Base.Theme.Pokedex">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button_white</item>
        <item name="android:backgroundTint">@drawable/background_button_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhiteButton" parent="Button">
        <item name="android:textColor">@color/pokemon_light_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaginationButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/background_button_white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>


    <style name="YellowButton" parent="Button">
    <item name="android:backgroundTint">@color/pokemon_yellow</item>
    <item name="android:textColor">@color/grey</item>
</style>
</resources>